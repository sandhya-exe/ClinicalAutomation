@model ClinicalAutomation.Models.Appointment


@{
    ViewBag.Title = "ConfirmAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Confirm Appointment</h2>



@using (Html.BeginForm("CONFIRM", "Appointments", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label>Patient Name:</label>
        <p>@Model.patient?.name</p>
    </div>

    <div class="form-group">
        <label>Criticality:</label>
        <p>@Model.Criticality</p>
    </div>

    <div class="form-group">
        <label>Reason:</label>
        <p>@Model.Reason</p>
    </div>

    <div class="form-group">
        @Html.Label("Physician")
        @Html.DropDownList("physicianId", null, "Select Physician", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Schedule Date/Time")
        @Html.TextBox("scheduleDateTime", null, new { @class = "form-control", @type = "datetime-local" })
    </div>

    <input type="hidden" name="id" value="@Model.AppointmentID" />
    <button type="submit" class="btn btn-primary">Confirm</button>
}
