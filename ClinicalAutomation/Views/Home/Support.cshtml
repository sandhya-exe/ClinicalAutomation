
@{
    ViewBag.Title = "Support";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Support</h2>

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>



<div class="support-section">
    <div class="support-content">
        <h1 class="support-heading">Help & Support</h1>
        <p class="support-paragraph">
            We’re here to help you get the most out of Cliniko. We also have a very active community and support forum where you can engage with other healthcare practitioners.
        </p>
    </div>
</div>


<div class="community-section">
    <div class="community-container">
        <!-- Left Side: Image -->
        <div class="community-image">
            <img src="~/Content/images/thinking.png" alt="Thinking illustration" style="object-fit: cover; width: 100%; height: auto;">
        </div>

        <!-- Right Side: Content -->
        <div class="community-content">
            <h2 class="community-heading">Community Forum</h2>
            <p class="community-description">
                Cliniko has an active community forum where members can share Cliniko-related knowledge, discuss feature requests, and read announcements and updates.
            </p>
            @*<a class="join-link" href="https://discord.com/invite/cliniko">Join the Cliniko community</a>*@
        </div>
    </div>
</div>

<div class="contact-section">
    <div class="contact-container">
        <!-- Left Side: Text -->
        <div class="contact-left">
            <h2 class="contact-heading">Need more help?</h2>
            <p class="contact-description">
                Our team is ready to assist you. If you need further help, feel free to reach out to us.
            </p>
            <a href="/contact-us" class="contact-button">Contact Us</a>
        </div>

        <!-- Right Side: Image with Text and Icons -->
        <div class="contact-right">
            <div class="care-platform-image">
                <div class="care-platform-text">
                    <h3>Care Platform</h3>
                    <p>Easy as 123..</p>
                </div>
                <div class="icon-container">
                    <i class="fas fa-comment"></i>
                    <i class="fas fa-bell"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* General Body Styles */
    body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif;
        background-color: #ffffff;
        color: #333333;
        line-height: 1.6;
    }

    /* Support Section Styling */
    .support-section {
        width: 100%;
        height: 60vh; /* Taking up 60% of the screen height */
        background-color: #f5f5f5;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .support-content {
        text-align: center;
        max-width: 80%; /* Limit width of the content */
        margin: 0 auto;
    }

    /* Heading Styling */
    .support-heading {
        font-size: 3rem;
        font-weight: 700;
        color: #4b384c; /* Dark purple for emphasis */
        margin-bottom: 0.75rem;
    }

    .support-heading {
        text-align: center;
        position: relative;
        bottom: 0.75rem;
    }

    @@media screen and (min-width: 45em) {
        .support-heading {
            font-size: 3.125rem; /* Larger font size on bigger screens */
            line-height: 3.75rem;
        }
    }

    /* Paragraph Styling */
    .support-paragraph {
        font-size: 1rem;
        font-family: 'OpenSans', sans-serif;
        text-align: center;
        color: #555;
        line-height: 1.5rem;
        max-width: 36rem;
        margin-left: auto;
        margin-right: auto;
        margin-bottom: 1.5rem;
    }

    .support-paragraph {
        position: relative;
        bottom: -0.375rem;
    }

    /* Responsive Styles for Smaller Screens */
    @@media screen and (max-width: 768px) {
        .support-heading {
            font-size: 2.5rem;
        }

        .support-paragraph {
            font-size: 0.95rem;
            max-width: 90%;
        }
    }


