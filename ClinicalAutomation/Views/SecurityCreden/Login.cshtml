@model ClinicalAutomation.Models.UserViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@*<div class="bg-blue-50 flex items-center justify-center min-h-screen">*@
<div class="bg-cover bg-center flex items-center justify-center min-h-screen" style="background-image: url('/Content//images//bg1.jpg');">
    <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
        <h1 class="text-2xl font-bold text-center text-purple-900 mb-4" style="font-family: 'Nunito', sans-serif;">
            Let's find your ClinicX account
        </h1>
        <p class="text-center text-gray-700 mb-6" style="font-family: 'Open Sans', sans-serif;">
            Enter your username and password to access your account.
        </p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-4">
                @Html.LabelFor(model => model.UserName, "Your Username", new { @class = "block text-gray-700 mb-2", style = "font-family: 'Open Sans', sans-serif;" })
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                @Html.LabelFor(model => model.Password, "Your Password", new { @class = "block text-gray-700 mb-2", style = "font-family: 'Open Sans', sans-serif;" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "w-full p-2 border border-gray-300 rounded" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="w-full bg-red-600 text-white py-2 rounded" style="font-family: 'Open Sans', sans-serif;">
                    Login
                </button>
            </div>
        }

        <hr class="my-6 border-t border-gray-200">

        <p class="text-center text-gray-700" style="font-family: 'Open Sans', sans-serif;">
            Don't have an account yet?<br>
            <a href="/Account/Register" class="text-blue-600">Register</a>
        </p>
    </div>
</div>

<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@700&family=Open+Sans&display=swap" rel="stylesheet">




